<Window x:Class="Bank2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bank2"
        mc:Ignorable="d"
        Title="MainWindow" Height="240.998" Width="336.8" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,18.2,-2.2">
        <Button x:Name="button" Content="Verwerk mutatie" HorizontalAlignment="Left" Margin="44,142,0,0" VerticalAlignment="Top" Width="244" FontSize="{Binding ElementName=textBox , Path=FontSize}" Click="button_Click"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Height="43"  Margin="151,51,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="137" FontSize="24" ToolTip="Negatief getal is af en positief getal is bij"/>
        <Label x:Name="label" Content="Bij/Af" HorizontalAlignment="Left" Margin="44,52,0,0" VerticalAlignment="Top" FontSize="{Binding ElementName=textBox , Path=FontSize}"/>

    </Grid>
</Window>
